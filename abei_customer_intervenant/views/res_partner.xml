<odoo>
    <record id="partner_intervenant_inherit_form" model="ir.ui.view">
        <field name="name">partner_intervenant_inherit_form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='internal_notes']" position="after">
                <page string="Intervenants" name="page_intervenants" attrs="{'invisible': [('is_company','!=',True)]}">
                    <group name="group_intervenants">
                        <group name="group_reponsables" string="Responsables">
                            <field name="collaborateur_expert_comptable" string="Expert Comptable"/>
                            <field name="collaborateur_principal" string="Collaborateur Principal"/>
                            <field name="collaborateur_assistant_comptable" string="Assistant Comptable"/>
                            <field name="collaborateur_assistant_paie" string="Assistant Paie"/>
                        </group>
                        <group name="group_collaborateurs" string="Collaborateurs">
                            <field name="collaborateur_tenue" string="Tenue"/>
                            <field name="collaborateur_revision" string="Révision"/>
                            <field name="collaborateur_tva" string="TVA"/>
                            <field name="collaborateur_situation" string="Situation"/>
                            <field name="collaborateur_divers_compta_social" string="Divers Compta + Social"/>
                            <field name="collaborateur_previsionnel" string="Prévisionnel"/>
                            <field name="collaborateur_flash" string="Flash"/>
                            <field name="collaborateur_divers_gestion" string="Divers Gestion"/>
                            <field name="collaborateur_charges_sociales" string="Charges Sociales"/>
                            <field name="collaborateur_divers_social" string="Divers Social"/>
                            <field name="collaborateur_paie_reguliere" string="Paie Régulière"/>
                            <field name="collaborateur_paie_occasionnelle" string="Paie Occasionnelle"/>
                            <field name="collaborateur_juridique" string="Juridique"/>
                            <field name="collaborateur_cac" string="C.A.C."/>
                            <field name="collaborateur_conseil" string="Conseil"/>
                        </group>
                    </group>
                </page>
            </xpath>
            <xpath expr="//field[@name='ref']" position="after">
                <field name="reCli" string="Référence client"/>
            </xpath>
        </field>
    </record>
</odoo>
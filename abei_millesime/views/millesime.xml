<odoo>
    <data>
        <!-- VUE LISTE MODIFIABLE -->
        <record id="abei_millesime.millesime_list" model="ir.ui.view">
            <field name="name">abei_millesime.millesime.list</field>
            <field name="model">abei_millesime.millesime</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="name"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <!-- Search view filter -->
        <record id="category_grouping_search" model="ir.ui.view">
            <field name="name">Filtre</field>
            <field name="model">abei_millesime.millesime</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <filter name="filter_actifs" string="Actifs" domain="[['active','=',True]]"/>
                    <filter name="filter_inactifs" string="Inactifs" domain="[['active','=',False]]"/>
                    <filter name="filter_tous" string="Actifs et Inactifs" domain="['|',['active','=',True],['active','=',False]]"/>
                </search>
            </field>
        </record>

        <!-- ACTION -->
        <record id="abei_millesime.millesime_action_window" model="ir.actions.act_window">
            <field name="name">Millesime</field>
            <field name="res_model">abei_millesime.millesime</field>
            <!-- default filter -->
            <field name="context">{"search_default_filter_tous":1}</field>
            <field name="view_mode">tree</field>
        </record>

        <!-- MENU -->
        <menuitem name="Millesime" id="abei_millesime.millesime_menu" parent="sale.menu_sale_config"
                  action="abei_millesime.millesime_action_window"/>
    </data>
</odoo>
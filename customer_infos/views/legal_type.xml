<odoo>
    <data>

        <record model="ir.ui.view" id="customer_infos.legal_type_list">
            <field name="name">customer_infos legal_type.list</field>
            <field name="model">customer_infos.legal_type</field>
            <field name="arch" type="xml">
                <tree  editable="bottom">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="customer_infos.legal_type_action_window">
            <field name="name">Legal Type</field>
            <field name="res_model">customer_infos.legal_type</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree</field>
        </record>

        <menuitem name="Legal Type" id="customer_infos.legal_type_menu" parent="sale.menu_sale_config"
                  action="customer_infos.legal_type_action_window"/>

    </data>
</odoo>

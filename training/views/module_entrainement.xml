<odoo>
    <data>
    <!-- VUES -->
    <!-- Liste  -->
    <record id="mon_module_list_view" model="ir.ui.view">
        <field name="name">estate.property</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="Liste">
                <field name="name"/>
                <field name="postcode"/>
                <field name="expected_price"/>
                <field name="type"/>
                <field name="state"/>
            </tree>
        </field>
    </record>
    <!-- Recherche -->
    <record id="search_view" model="ir.ui.view">
        <field name="name">Search view</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Tests">
                <field name="postcode"/>
            </search>
        </field>
    </record>
    <!-- Formulaire annonce -->
    <record id="etate_property_form" model="ir.ui.view">
        <field name="name">Formulaiere</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Formulaire">
                <header>
                    <button name="action_bouton_annulee" type="object" string="AnnulÃ©e"/>
                    <button name="action_bouton_vendue" type="object" string="Vendue"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                                <field name="state"/>
                                <field name="name"/>
                                <field name="tag" widget="many2many_tags" />
                                <field name="type"/>
                                <field name="postcode"/>
                                <field name="date_availability"/>
                        </group>
                        <group>
                            <field name="expected_price"/>
                            <field name="selling_price"/>
                            <field name="best_price"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="description"/>
                                <field name="bedrooms"/>
                                <field name="living_area"/>
                                <field name="facades"/>
                                <field name="garage"/>
                                <field name="garden"/>
                                <field name="garden_area"/>
                                <field name="garden_orientation"/>
                                <field name="total_area"/>
                            </group>
                        </page>
                        <page string="Offres">
                            <group>
                                <field name="offer_ids"/>
                            </group>
                        </page>
                        <page string="Autres infos">
                            <group>
                                <field name="vendeur_id"/>
                                <field name="acheteur_id"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <!-- Formulaire offre -->
    <record id="offer_formulaire" model="ir.ui.view">
        <field name="name">Offre</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form string="Offre">
                <sheet>
                    <group>
                        <group>
                            <field name="prix"/>
                        </group>
                        <group>
                            <field name="partner_id"/>
                        </group>
                        <group>
                            <field name="validity"/>
                        </group>
                        <group>
                            <field name="date_deadline"/>
                        </group>
                        <group>
                            <field name="status"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!-- Vue liste Offres -->
    <record id="list_view_offer" model="ir.ui.view">
        <field name="name">list_view_offer</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree string="Liste offres">
                <field name="prix"/>
                <field name="status"/>
                <field name="validity"/>
                <button name="action_confirm" type="object" icon="fa-check"/>
                <button name="action_cancel" type="object" icon="fa-times"/>
            </tree>
        </field>
    </record>

    <!-- Liste Type -->
    <record id="type_list_view" model="ir.ui.view">
        <field name="name">Type</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <tree string="Type">
                <!-- PERMET DE REAJOUTER LA CROIX DIRECTIONNELLE POUR CHANGER ORDRE -->
                <field name="sequence" widget="handle"/>
                <field name="name"/>
            </tree>
        </field>
    </record>
    <!-- vue formulaiare Type-->
    <record id="form_view_type" model="ir.ui.view">
        <field name="name">form_view_type</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <form string="form">
                <field name="name"/>
                <field name="property_ids">
                    <tree>
                        <field name="name"/>
                        <field name="expected_price"/>
                        <field name="state"/>
                    </tree>
                </field>
            </form>
        </field>
    </record>
    <!-- Liste Tags  -->
    <record id="tag_list_view" model="ir.ui.view">
        <field name="name">Tag</field>
        <field name="model">estate.property.tag</field>
        <field name="arch" type="xml">
            <tree string="Tag">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!-- ACTION -->
    <!-- Bien immobilier-->
    <record id="mon_module_action" model="ir.actions.act_window">
        <field name="name">Bien immobilier</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form,search</field>
    </record>
    <!-- Type -->
    <record id="type_action" model="ir.actions.act_window">
        <field name="name">Type</field>
        <field name="res_model">estate.property.type</field>
        <field name="view_mode">tree,form</field>
    </record>
    <!-- Tag -->
    <record id="tag_action" model="ir.actions.act_window">
        <field name="name">Tag</field>
        <field name="res_model">estate.property.tag</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- MENUS -->
	<menuitem id="root_menu" name="Entrainement 1">
		<menuitem id="second_menu" name="Immobilier">
			<menuitem id="test_module_manu_action" action="mon_module_action"/>
		</menuitem>
        <menuitem id="type_menu" name="Type">
            <menuitem id="type_menu_action" action="type_action"/>
        </menuitem>
        <menuitem id="tag_menu" name="Tag">
            <menuitem id="tag_menu_action" action="tag_action"/>
        </menuitem>
	</menuitem>
    </data>
</odoo>
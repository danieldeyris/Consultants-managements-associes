<odoo>
    <!-- AJOUT ETIQUETTE VUE FORMULAIRE ARTICLE -->
    <record id="product_template_only_form_view_inhertit_abei_feuille_temps" model="ir.ui.view">
        <field name="name">product.template.only.form.view.inhertit.abei.feuille.temps</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="abei_article.product_template_only_form_view_inhertit_abei_article"/>
        <field name="arch" type="xml">
            <xpath expr="//form[@name='Product Template']/sheet[1]/notebook[1]/page[@name='general_information']/group[1]" position="after">
                <group string="Aide Ã  la saisie de temps automatique" name="aide_saisie_temps_auto_product">
                    <group name="menu_gauche_product">
                        <field name="type_temps"/>
                        <field name="temps_incompressible" attrs="{'invisible':[('type_temps', '=', False)]}"/>
                        <field name="temps_unitaire" attrs="{'invisible':[('type_temps', '=', False)]}"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>
</odoo>


<odoo>
    <record id="res_users_form_etiquette_metier" model="ir.ui.view">
        <field name="name">res.users.form.etiquette.metier</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form[1]/sheet[1]/notebook[1]" position="inside">
                <page string="Signature email" name="signature_email" id="lines">
                    <field name="signature_line">
                        <tree editable="bottom">
                            <field name="company_signature" required="1" options="{'no_create': True, 'no_create_edit':True}" />
                            <field name="signature" required="1"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
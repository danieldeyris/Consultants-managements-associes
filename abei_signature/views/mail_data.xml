<odoo>
    <data>
        <!-- Modification de data\mail_data.xml (Bouton envoyer par mail [devis][facture]) -->
        <template id="mail_notification_paynow_abei_signature" inherit_id="mail.mail_notification_paynow">
            <!-- RETRAIT POWERED BY ODOO -->
            <xpath expr="//t[1]/table[1]/tr[2]" position="replace">
                <td align="center" style="min-width: 590px; padding: 8px; font-size:11px;"/>
            </xpath>
            <!-- RETRAIT SIGNATURE FORCEE -->
            <xpath expr="//tbody[1]/tr[3]" position="replace"/>

            <!-- RETRAIT FORMULE POLITESSE BEST REGARDS -->
            <xpath expr="//tbody[1]/tr[2]/td/t[2]" position="replace"/>

            <!-- BOUTON SIGNATURE -->
<!--            <xpath expr="//tbody[1]/tr[2]/td/div/a" position="replace">-->
<!--                -->
<!--            </xpath>-->
        </template>

        <!-- Retrait "Envoyé par XXX utilisant Odoo" de l'email envoyé depuis le chatter -->
        <template id="message_notification_email_abei_signature" inherit_id="mail.message_notification_email">
            <xpath expr="//div[1]/p[1]" position="replace">
                <div>
                    <span t-esc="user.name"></span>
                    <span t-esc="request.env.user.name"/>
                    <span t-esc="request.env"/>
                    <span t-esc="company.name"/>
                </div>
            </xpath>
        </template>
    </data>
</odoo>
<odoo>
    <!-- Model project.task -->
    <record id="project_view_task_search_form_inherit" model="ir.ui.view">
        <field name="name">project.view.task.search.form.inherit</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_search_form"/>
        <field name="arch" type="xml">
            <xpath expr="//search[1]/separator[1]" position="after">
                <filter name="Administratif" string="Administratif" domain="[['etiquette_projet','ilike','Administratif']]"/>
                <filter name="CAC" string="CAC" domain="[['etiquette_projet','ilike','CAC']]"/>
                <filter name="Comptable" string="Comptable" domain="[['etiquette_projet','ilike','Comptable']]"/>
                <filter name="Juridique" string="Juridique" domain="[['etiquette_projet','ilike','Juridique']]"/>
                <filter name="Social" string="Social" domain="[['etiquette_projet','ilike','Social']]"/>
                <separator name="separator_up"/>
                <filter name="Informatique" string="Informatique" domain="[['etiquette_projet','ilike','Informatique']]"/>
                <separator name="separator_down"/>
            </xpath>
        </field>
    </record>


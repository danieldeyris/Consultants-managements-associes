<odoo>
    <!-- Model project.task -->
    <record id="project_view_task_search_form_inherit" model="ir.ui.view">
        <field name="name">project.view.task.search.form.inherit</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_search_form"/>
        <field name="arch" type="xml">
            <xpath expr="//search[1]/separator[1]" position="after">
                <filter name="Administratif" string="Administratif" domain="[['tag_ids','ilike','Administratif']]"/>
                <filter name="CAC" string="CAC" domain="[['tag_ids','ilike','CAC']]"/>
                <filter name="Comptable" string="Comptable" domain="[['tag_ids','ilike','Comptable']]"/>
                <filter name="Juridique" string="Juridique" domain="[['tag_ids','ilike','Juridique']]"/>
                <filter name="Social" string="Social" domain="[['tag_ids','ilike','Social']]"/>
                <filter name="Informatique" string="Informatique" domain="[['tag_ids','ilike','Informatique']]"/>
                <separator name="separator_up"/>
                <filter name="TacheEnCours" string="Tâches en cours" domain="[['is_closed','!=',True]]"/>
                <filter name="TacheTerminee" string="Tâches terminées" domain="[['is_closed','!=',False]]"/>
                <separator name="separator_down"/>
            </xpath>
        </field>
    </record>

    <!-- vue formulaire -->
    <record id="project_views_form2_abei_project" model="ir.ui.view">
        <field name="name">project.task.view.form.project</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <xpath expr="//form[1]/sheet[1]/group[1]" position="after">
                <group string="Aide à la saisie de temps automatique" name="aide_saisie_temps_auto">
                    <group name="menu_gauche">
                        <field name="type_temps"/>
                        <field name="temps_incompressible" attrs="{'invisible':[('type_temps', '=', False)]}"/>
                        <field name="temps_unitaire" attrs="{'invisible':[('type_temps', '=', False)]}"/>
                    </group>
                    <group name="menu_droite">
                        <field name="quantite_bulletin_estime"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>

    <!-- FILTRE PAR DEFAUT - AFFICHAGE DES TACHES EN COURS -->
    <record id="project.act_project_project_2_project_task_all" model="ir.actions.act_window">
        <field name="context">{'pivot_row_groupby': ['user_id'],'default_project_id': active_id,'search_default_TacheEnCours': 1}</field>
    </record>

    <!-- AJOUT BOUTON VUE LISTE "Clôturer tâche" -->
    <record model="ir.actions.server" id="action_update_un">
        <field name="name">Clôturer tâche(s)</field>
        <field name="model_id" ref="model_project_task"/>
        <field name="binding_model_id" ref="model_project_task"/>
        <field name="state">code</field>
        <field name="code">
        records.action_cloturer_tache()
        </field>
    </record>


</odoo>
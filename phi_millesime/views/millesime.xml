<odoo>
    <data>

        <record model="ir.ui.view" id="phi_millesime.millesime_list">
            <field name="name">phi_millesime.millesime.list</field>
            <field name="model">phi_millesime.millesime</field>
            <field name="arch" type="xml">
                <tree  editable="bottom">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="phi_millesime.millesime_action_window">
            <field name="name">Millesime</field>
            <field name="res_model">phi_millesime.millesime</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">tree</field>
        </record>

        <menuitem name="Millesime" id="phi_millesime.millesime_menu" parent="sale.menu_sale_config"
                  action="phi_millesime.millesime_action_window"/>

    </data>
</odoo>
